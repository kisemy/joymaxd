              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(item => {
            console.log('Item data fetched:', item); // Debugging
            // Update all fields
            lineFields.querySelector('.item_no').value = item.item_no || '';
            lineFields.querySelector('.quantity').value = item.quantity || '';
