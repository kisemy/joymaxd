            lineFields.querySelector('.unit_price').value = item.unit_price || '';
            lineFields.querySelector('.amount').value = item.amount || '';
          })
          .catch(error => console.error('Error fetching item data:', error));
      } else {
        // Clear fields if no description is selected
        lineFields.querySelector('.item_no').value = '';
        lineFields.querySelector('.quantity').value = '';
        lineFields.querySelector('.unit_of_measure').value = '';
        lineFields.querySelector('.unit_price').value = '';
        lineFields.querySelector('.amount').value = '';
      }
    });
  });

