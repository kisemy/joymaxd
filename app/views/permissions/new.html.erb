<h1>New Permission</h1>

<%= form_with model: @permission, local: true do |form| %>
  <div class="form-group">
    <%= form.label :action %>
    <%= form.text_field :action, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subject_class %>
    <%= form.text_field :subject_class, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subject_id %>
    <%= form.number_field :subject_id, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Permission', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Permissions', permissions_path, class: 'btn btn-secondary' %>

</div>
