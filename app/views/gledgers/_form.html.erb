<%= form_with(model: gledger, local: true) do |form| %>
  <% if gledger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gledger.errors.count, "error") %> prohibited this gledger from being saved:</h2>

      <ul>
        <% gledger.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :accountno %>
    <%= form.text_area :accountno %>
  </div>

