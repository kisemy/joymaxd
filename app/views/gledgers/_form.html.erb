  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <div class="field">
    <%= form.label :sourcetype %>
    <%= form.text_area :sourcetype %>
  </div>

  <div class="field">
    <%= form.label :sourceno %>
    <%= form.text_area :sourceno %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
